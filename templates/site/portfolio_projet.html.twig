{% extends 'base_site.html.twig' %}

{% block title %}{{ projet.titre }}{% endblock %}

{% block body_class %}site portfolio projet{% endblock %}

{% block body %}

    <div class="row" id="retour">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <button class="btn"><a href="{{ path('portfolio') }}"> <img src="{{ asset('picto/arrow-left.svg') }}" alt="Retour"> Portfolio</a></button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1>{{ projet.titre }}</h1>
        </div>
    </div>

    <div class="row" id="projet">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <img src="{{ asset('projet_couverture/'~ projet.couverture ~'') }}" alt="{{ projet.titre }}">
        </div>

        <div class="col-lg-6 col-md-6 col-sm-12">
            <div>{{ projet.description|raw }}</div>
            
            <div>
                {% for tag in projet.tags %}
                    <div>{{ tag.libelle }}</div>
                {% endfor %}
            </div>

            <div class="row">
                {% if projet.lien != NULL %}
                    <div>
                        <button class="btn"> <a href="{{ projet.lien }}" title="Lien du projet" target="_blank"> <img src="{{ asset('picto/open-tab.svg') }}" alt="Ouverture d'un nouvel onglet"> Lien du projet</a></button>
                    </div>
                {% endif %}

                {% if projet.github != NULL %}
                    <div>
                        <button class="btn"> <a href="{{ projet.github }}" title="Lien du Github" target="_blank"> <img src="{{ asset('picto/github.svg') }}" alt="Github"> Github</a></button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
